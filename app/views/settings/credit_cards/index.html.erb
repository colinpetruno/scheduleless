<div class="frame">
  <header>
    <div>
      <%= t(".header") %>

      <aside>
        <%= link_to t(".add_card"), new_settings_credit_card_path %>
      </aside>
    </div>
  </header>
  <section>
    <article>
      <% if @credit_cards.present? %>
        <table>
          <thead>
            <tr>
              <th>Type</th>
              <th>Last 4</th>
              <th>Expiration</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <%= render @credit_cards %>
        </table>
      <% else %>
        <%= render partial: "blank" %>
      <% end %>
    </article>
  </section>
</div>
