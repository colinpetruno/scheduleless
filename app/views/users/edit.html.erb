<div>
  <%= simple_form_for @user, url: user_path do |f| %>
    <div class="frame">
      <section>
        <article>
          <%= f.input :family_name %>
          <%= f.input :given_name %>
          <%= f.input :locale,
            as: :select,
            collection: LocaleOptions.for_select,
            include_blank: false %>
        </article>
      </section>
    </div>

    <br><br>

    <div class="frame">
      <header>
        <div><%= t(".contact_info") %></div>
      </header>
      <section>
        <article>
          <%= f.input :email, disabled: true %>
          <%= f.input :mobile_phone %>
        </article>
      </section>
    </div>

    <br><br>

    <div class="frame">
      <header>
        <div><%= t(".availablity") %></div>
      </header>
      <section>
        <article>
          <% current_user.preferred_hours.each do |preferred_hours| %>
            <%= f.simple_fields_for "preferred_hours_attributes[]", preferred_hours do |ph| %>
              <%= ph.input :id, as: :hidden %>
              <%= ph.input :testing, as: :time_range %>
            <% end %>
          <% end %>
        </article>
      </section>
    </div>

    <br /><br />
    <div class="frame">
      <header>
        <div><%= t(".calendar_feed") %></div>
      </header>
      <section>
        <article>
          <div >
            <span class="selectable">
              <%= "#{stream_url(current_user.hash_key)}.ics" %>
            </span>
          </div>
          <small><%= t(".use_this_link") %></small>
        </article>
      </section>
    </div>

    <%= f.button :submit %>

  <% end %>
</div>
