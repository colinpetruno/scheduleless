<div class="rail narrow">
  <section>
    <aside>
      <%= render partial: "shifts/sidebar" %>
    </aside>

    <article>
      <div class="frame">
        <header>
          <div>
            <%= t(".title") %>
            <aside>
              <%= link_to(
                t(".request_time_off"),
                new_time_off_request_path,
                class: "button"
              ) %>
            </aside>
          </div>
        </header>

        <section>
          <article>
            <% if @time_off_requests.present? %>
              <%= render @time_off_requests %>
            <% else %>
              <div class="centered">
                You haven't requested any time off yet!  <br />

                <%= link_to "Take a Break", new_time_off_request_path %>
              </div>
            <% end %>

          </article>
        </section>
      </div>
    </article>
  </section>
</div>
